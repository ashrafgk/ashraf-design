---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import Footer from '../components/Footer.astro';

const anim = {
	old: {
	  name: 'bump',
	  duration: '1.5s',
	  easing: 'ease-in',
	  direction: 'reverse',
	},
	new: {
	  name: 'bump',
	  duration: '1.5s',
	  easing: 'ease-in-out',
	  
	},
  };
  
  const customTransition = {
	forwards: anim,
	backwards: anim,
  };

---

<Layout title="Ashraf Khattab Portfolio">
	<main>
		<div style="position:relative; overflow-x: clip">
			<PageHeader />
	
			<div style="padding: 15rem 0 0; background: linear-gradient(0deg, #0e0e0e 0%, #0e0e0e 90%, transparent 100%); position: relative; z-index: 20;opacity: 1;">
				<section style="" class="bio-container">
					<div style="" class="bio--header">
						<p style="margin-block-end: 1rem;line-height: 1.35; font-size: 48px; font-weight: 600; text-align: left; margin-bottom: 3rem;">Hi, I am a designer who cares about creating beautiful experiences that people can find useful.</p>
