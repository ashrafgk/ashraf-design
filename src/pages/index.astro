<style>
    :root {
        --x: 0;
        --y: 0;
    }

	main {
		background-color: #0e0e0e;
	}

	@media (prefers-reduced-motion: no-preference) {
		@supports (animation-timeline: scroll()) {
			#pattern-move-1 {
				transform-origin: 50% 50%;
				animation: move-down forwards ease-in-out;
				animation-timeline: scroll(block nearest);
				animation-range: exit-crossing 0% exit-crossing 50%;
			}
			#pattern-move-2 {
				transform-origin: 50% 50%;
				animation: move-down forwards ease-in-out;
				animation-timeline: scroll(block nearest);
				animation-range: exit-crossing 0% exit-crossing 50%;
			}
			/* .subheader-appear {
				transform-origin: 50% 50%;
				animation: subheader-animation linear;
				animation-timeline: scroll(block nearest);
				animation-range: exit-crossing 0% exit-crossing 25%;
			} */
			.header-container {
				transform-origin: 50% 50%;
				animation: text-blur-progress forwards ease-in-out;
				animation-timeline: scroll(block nearest);
				animation-range: exit-crossing 0% exit-crossing 40%;
			}
		}
	}

	@keyframes move-down {
		0% {
			transform: translateY(00px);
		}
		100% {
			transform: translateY(-220px);
			
		}
	}

	

	@keyframes text-reveal {
		from {
			opacity: 0;
			/* clip-path: inset(100% 0% 100% 0%); */
			filter: blur(5px);
		}
		to {
			opacity: 1;
			/* clip-path: inset(0% 0% 0% 0%); */
			filter: blur(0px);
		}
	}

	.bio-container {
		max-width: 1800px; 
		padding: 10rem 0; 
		align-items: center;
		justify-content: center; 
		display: flex; 
		flex-direction: column; 
		margin: auto; 
		position: relative;
		p {
			/* Create View Timeline */
			view-timeline-name: --revealing-text;
			view-timeline-axis: block;

			/* Attach animation, linked to the  View Timeline */
			animation: linear text-reveal both;
			animation-timeline: --revealing-text;

			/* Tweak range when effect should run*/
			animation-range: entry 20% cover 60%;
		}
	}

	.bio--header {
		max-width: 780px;
		margin: 0; 
		margin-block-end: 3rem; 
		padding: 0 2rem; 
		position: relative; 
		z-index: 2;
	}

	.bio--roles {
		max-width: 780px; 
		display: grid; 
		grid-template-columns: 1fr; 
		gap: 3rem; 
		margin-block-end: 2rem; 
		padding: 0 2rem;
	}
	
	/* work */
	.work-cover-container {
		margin-bottom: 10rem;

	}

	.work-cover {
		background-size: cover; margin-block-end: 1rem; border-radius: 2rem; overflow: hidden;
	}

	.work-img {
		animation: parallax ease-out;
		animation-timeline: view();
		animation-range: entry 25% cover 50%;
		grid-area: cover;
		border-radius: 2rem;
		width: 100%;
		max-width: 100%;
	}
	.work-title {
		display: flex;
		align-items: center;
		gap: 0.4rem;
		font-size: 2rem;
		font-weight: bold;
		margin-block-end: 2em;
	}

	.works-tag {
		background: #555;
		border-radius: 8px;
		padding: 0.5rem 1rem;
		font-size: 12px;
	}

	

	/* #progress {
		transform-origin: 50% 50%;
		animation: grow-progress forwards ease-in-out;
		animation-timeline: scroll(block nearest);
		animation-range: exit-crossing 0% exit-crossing 20%;
	} */

	@keyframes appear-progress {
		from {
			transform: translateY(100px);
			opacity: 0;
		}

		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	.appear {
		position: relative;
		top: 20px;
		margin: auto;
		transform-origin: 50% 50%;
		animation: appear-progress auto linear;
		animation-timeline: scroll(block nearest);
		animation-range: exit-crossing 0% exit-crossing 20%;
	}

	.work-img {
		animation: parallax ease-out;
		animation-timeline: view();
		animation-range: entry 25% cover 50%;
		grid-area: cover;
		border-radius: 2rem;
		width: 100%;
		max-width: 100%;
	}

	.other-work-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
	@media only screen and (max-width: 1680px) {
		#pattern-move-1 { display: none;}
		#pattern-move-2 { display: none;}
	}

	@media only screen and (max-width: 992px) {
		#pattern-move-1 { display: none;}
		#pattern-move-2 { display: none;}
		.work-cover {
			border-radius: 1rem; 
		}
		.works-tag {
			display: none;
		}

		.other-work-grid { display: grid; grid-template-columns: 100%; gap: 1rem; }
	}

</style>
